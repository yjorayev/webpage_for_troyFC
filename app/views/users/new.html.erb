<div class="row">
	<div class="well col-md-8 col-md-offset-2">
		<%= form_for(@user, html: { multipart:true }, validate: true) do |s| %>
			<div>
				<%= s.label :firsname %>
			</div>
			<div>
				<%= s.text_field :firstname %>
			</div>
			<div>
				<%= s.label :lastname %>
			</div>
			<div>
				<%= s.text_field :lastname %>
			</div>
			<div>
				<%= s.label :email %>
			</div>
			<div>
				<%= s.email_field :email %>
			</div>

			<div>
				<%= s.label :position %>
			</div>
			<div>
				<%= s.select(:position, ["Goalkeeper", "Defender", "Midfielder", "Attacker", "Coach"]) %>
			</div>
			<div>
				<%= s.label :nationality %>
			</div>
			<div>
				<%= s.country_select :nationality %>
			</div>
			<div>
				<%= s.label :major %>
			</div>
			<div>
				<%= s.text_field :major %>
			</div>

			<div>
				<%= s.label :classification %>
			</div>
			<div>
				<%= s.select(:classification, ["Freshman", "Sophomore", "Junior", "Senior"], prompt: "Select a position") %>
			</div>

			<div>
				<%= s.label :number %>
			</div>
			<div>
				<%= s.text_field :number %>
			</div>

			<div>
				<%= s.label :dob, "Date of Birth" %>
			</div>
			<div>
				<%= s.text_field :dob, id: "dob" %>
			</div>

			<div>
				<span class="picture">
        			<%= s.file_field :picture, accept: "image/jpeg,image/gif,image/png" %>
      			</span>
      		</div>
			<%= s.submit "Create", class: "btn btn-success" %>
		<% end %>
	</div>
</div>



<script type="text/javascript">
	$("#user_picture").bind("change", function(){
		size.in_megabytes = this.files[0].size/1024/1024;
		if (size_in_megabytes > 3){
			alert("Maximun file size is 3 Mb, please choose smaller file.")
		}
	});
</script>